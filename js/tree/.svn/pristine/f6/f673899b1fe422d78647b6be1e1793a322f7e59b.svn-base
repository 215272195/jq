		//调用树
		$(".tree_box").Tree({
			url:"",
			click_url:"",
			table_url:"",
			json_str:test_json_str,
			condition_url:"",
			template:$("#tree_tpl").val(),
			namespace:"",
			type:"org"
		});
	</script>
	</body>
</html>